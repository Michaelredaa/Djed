{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "title": "djed:asset",
    "description": "A unit of data",

    "type": "object",

    "required": [
        "name",
        "source",
        "data"
    ],

    "properties": {
        "name": {
            "description": "Name of asset",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.]*$",
            "example": "Table"
        },
        "source": {
            "description": "Name of source software",
            "type": "string",
            "example": "maya"
        },
        "data": {
            "description": "Asset data",
            "type": "object",
            "example": {"key": "value"}
        }
    },

    "definitions": {}
}